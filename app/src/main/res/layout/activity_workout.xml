<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp">

        <TableRow>
            <LinearLayout android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/duration"
                    android:layout_gravity="left"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/label_duration"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_duration"
                    android:gravity="left"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/duration"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00:00" />
        </TableRow>

        <View android:layout_height="1dip"
            android:background="#FF909090">
        </View>

        <TableRow android:paddingTop="15dp">
            <LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/distance"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/label_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_distance"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout android:orientation="horizontal">
                <TextView
                    android:id="@+id/distance"
                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/distanceUnit"
                    android:textSize="37dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"/>
            </LinearLayout>
        </TableRow>

        <View android:layout_height="1dip"
            android:background="#FF909090">
        </View>

        <TableRow android:paddingTop="15dp">
            <LinearLayout android:layout_column="0">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/calories"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/label_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_calories"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <LinearLayout android:layout_column="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hearthrate"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/label_heartRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_heartrate"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout android:orientation="horizontal"
                android:layout_column="0">
                <TextView
                    android:id="@+id/calories"
                    android:textSize="34dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/caloriesUnit"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_column="1">
                <TextView
                    android:id="@+id/heartRate"
                    android:textSize="34dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/heartRateUnit"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bmp" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <View android:layout_height="1dip"
                android:background="#FF909090"
                android:layout_column="0"
                android:paddingRight="5dp">
            </View>
            <View android:layout_height="1dip"
                android:background="#FF909090"
                android:layout_column="1">
            </View>
        </TableRow>

        <TableRow android:paddingTop="15dp">
            <LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/workoutplaybutton"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_sport"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </TableRow>

        <View android:layout_height="1dip"
            android:background="#FF909090">
        </View>

        <TableRow android:paddingTop="15dp">
            <LinearLayout android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/workoutplaybutton"
                    android:layout_gravity="left"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</android.support.design.widget.CoordinatorLayout>
